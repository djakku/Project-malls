%h2 Details about #{@movie.title}
%ul#details
  %li
    Mall Rating:
    = @movie.rating
  %li
    Estrablished on:
    = @movie.release_date.strftime("%B %d, %Y")
= link_to 'Edit Mall Information', edit_movie_path(@movie)
= link_to 'Delete Mall', @movie, method: :delete, :confirm => "Are you sure you want to delete this item?"
= link_to 'Back to the Malls list', movies_path
= link_to 'Add review of the Mall', new_movie_review_path(@movie)

